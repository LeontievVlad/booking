<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bookin Room (Admin)</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Booking Room", "IndexRoom", "Reserveds", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Головна", "Index", "Admin")</li>

                    <li>@Html.ActionLink("Всі ролі", "AllRoles", "Admin")</li>
                    <li>@Html.ActionLink("Створити роль", "CreateRole", "Admin")</li>
                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Керування ролями", "GetRoles", "Admin")</li>
                        if (ViewBag.CountGuests == null || ViewBag.CountGuests == 0)
                        {

                        }
                        else
                        {
                            <li style="color:white;border-radius:50%;background-color:#3b8cd1;padding:3px;margin-top: 5px;">
                                <span style="margin-top: 2px;">
                                    &nbsp;&nbsp;@ViewBag.CountGuests&nbsp;&nbsp;

                                </span>
                            </li>
                        }
                    }

                </ul>

                @Html.Partial("_LoginPartial")

                @*<span class="navbar-right navbar-text">
                    @using Microsoft.AspNet.Identity
                    @Html.ActionLink(User.Identity.GetUserName(), "Index", "../Manage", routeValues: null, htmlAttributes: new { @class = "btn btn-default btn-sm" })
                </span>*@

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bookin Room (Admin)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    
    @RenderSection("scripts", required: false)
</body>
</html>