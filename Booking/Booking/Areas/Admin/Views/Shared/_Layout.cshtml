<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Booking Room</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap CSS File -->
    @*<link href="lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">*@
    <link href="~/Content/eBusiness/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Libraries CSS Files -->
    <link href="~/Content/eBusiness/lib/nivo-slider/css/nivo-slider.css" rel="stylesheet">
    <link href="~/Content/eBusiness/lib/owlcarousel/owl.carousel.css" rel="stylesheet">
    <link href="~/Content/eBusiness/lib/owlcarousel/owl.transitions.css" rel="stylesheet">
    <link href="~/Content/eBusiness/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/eBusiness/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Content/eBusiness/lib/venobox/venobox.css" rel="stylesheet">

    <!-- Nivo Slider Theme -->
    <link href="~/Content/eBusiness/css/nivo-slider-theme.css" rel="stylesheet">

    <!-- Main Stylesheet File -->
    <link href="~/Content/eBusiness/css/style.css" rel="stylesheet">

    <!-- Responsive Stylesheet File -->
    <link href="~/Content/eBusiness/css/responsive.css" rel="stylesheet">

    <!-- DropDown Stylesheet File -->
    <link href="~/Content/chosen.css" rel="stylesheet" />
    <link href="~/Content/select2.css" rel="stylesheet" />

    <!-- Pagination Stylesheet File -->
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
</head>

<body data-spy="scroll" data-target="#navbar-example">
    <div id="preloader"></div>
    <header>
        <!-- header-area start -->
        <div id="sticker" class="header-area" style="background-color:#444444;">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12">

                        <!-- Navigation -->
                        <nav class="navbar navbar-default">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".bs-example-navbar-collapse-1" aria-expanded="false">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <!-- Brand -->
                                <a class="navbar-brand page-scroll sticky-logo" href="/">
                                    <h1>Booking Room</h1>
                                    <!-- Uncomment below if you prefer to use an image logo -->
                                    <!-- <img src="img/logo.png" alt="" title=""> -->
                                </a>
                                @*@Html.ActionLink("Booking Room", "IndexRoom", "Reserveds", new { area = "" }, new { @class = "navbar-brand" })*@

                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse main-menu bs-example-navbar-collapse-1" id="navbar-example">
                                <ul class="nav navbar-nav navbar-left">
                                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                                    {
                                        <li>@Html.ActionLink("Головна", "Index", "Admin")</li>

                                        <li>@Html.ActionLink("Всі ролі", "AllRoles", "Admin")</li>
                                        <li>@Html.ActionLink("Створити роль", "CreateRole", "Admin")</li>
                                        <li>
                                            @Html.ActionLink("Керування ролями", "GetRoles", "Admin")

                                        </li>
                                        if (Html.Action("CountGuests", "Admin").ToString() != "0")
                                        {
                                            <li>
                                                <span class="badge" style="font-size:1.3em;color:white;background-color:#3b8cd1;">
                                                    @Html.Action("CountGuests", "Admin")

                                                </span>
                                            </li>
                                        }

                                    }
                                </ul>
                                @Html.Partial("_LoginPartial")

                            </div>
                            <!-- navbar-collapse -->
                        </nav>
                        <!-- END: Navigation -->
                    </div>
                </div>
            </div>
        </div>
        <!-- header-area end -->
    </header>
    <!-- header end -->
    <div class="container body-content" style="min-height:100%;">
        <br /><br />
        @RenderBody()
        <div><span id="notification" style="color:red;font-size:15px;"></span></div>
    </div>
    <!-- Start Footer bottom Area -->
    <footer>
        <div class="footer-area-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="copyright text-center">
                            <p>
                                &copy; @DateTime.Now.Year - <strong>Booking Room</strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="~/Content/eBusiness/lib/jquery/jquery.min.js"></script>
    <script src="~/Content/eBusiness/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/eBusiness/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Content/eBusiness/lib/venobox/venobox.min.js"></script>
    <script src="~/Content/eBusiness/lib/knob/jquery.knob.js"></script>
    <script src="~/Content/eBusiness/lib/wow/wow.min.js"></script>
    <script src="~/Content/eBusiness/lib/parallax/parallax.js"></script>
    <script src="~/Content/eBusiness/lib/easing/easing.min.js"></script>
    <script src="~/Content/eBusiness/lib/nivo-slider/js/jquery.nivo.slider.js" type="text/javascript"></script>
    <script src="~/Content/eBusiness/lib/appear/jquery.appear.js"></script>
    <script src="~/Content/eBusiness/lib/isotope/isotope.pkgd.min.js"></script>

    <!-- Contact Form JavaScript File -->
    @*<script src="contactform/contactform.js"></script>*@

    <script src="~/Content/eBusiness/js/main.js"></script>





    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/chosen.jquery.js"></script>
    <script src="~/Scripts/select2/select2.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>

    @RenderSection("scripts", required: false)

</body>

</html>
