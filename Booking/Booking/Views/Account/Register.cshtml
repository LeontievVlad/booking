@model Booking.Models.RegisterViewModel
@{
    ViewBag.Title = "Реєстрація";
}

<br />
<br />
<br />
<br />

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div class="text-center">

    @Html.AntiForgeryToken()
    <h4 hidden>Создание новой учетной записи.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <h5>
            Адреса електронної пошти
        </h5>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control center-block text-center", style = "width:40%;" })

    </div>
    <div class="form-group">
        <h5>
            Ім'я
        </h5>
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control center-block text-center", style = "width:40%;" })

    </div>
    <div class="form-group">
        <h5>
            Пароль
        </h5>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control center-block text-center", style = "width:40%;" })

    </div>
    <div class="form-group">
        <h5>
            Підтвердження пароля
        </h5>
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control center-block text-center", style = "width:40%;" })

    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Зареєструватися" />

    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
