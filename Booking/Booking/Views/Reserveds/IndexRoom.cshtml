@model IEnumerable<Booking.Models.RoomViewModels.IndexRoomViewModel>


@{
    ViewBag.Title = "Головна";

}
<br />
<br />
<br />

<!-- Start Slider Area -->
<div id="home" class="slider-area" style="display:none;">
    <div class="bend niceties preview-2">
        <div id="ensign-nivoslider" class="slides">
            <img src="~/Content/eBusiness/img/slider/1.jpg" alt="" title="#slider-direction-1" />
        </div>

        <!-- direction 1 -->
        <div id="slider-direction-1" class="slider-direction slider-one">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="slider-content">
                            <!-- layer 1 -->
                            <div class="layer-1-1 hidden-xs">
                                <h2 class="title1">Заголовок</h2>
                            </div>
                            <!-- layer 2 -->
                            <div class="layer-1-2">
                                <h1 class="title2">Опис</h1>
                            </div>
                            <!-- layer 3 -->
                            <div class="layer-1-3 hidden-xs">
                                <a class="ready-btn right-btn page-scroll" href="#services">Бронювання</a>
                                <a class="ready-btn page-scroll" href="#about">Події</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- End Slider Area -->
<!-- Start portfolio Area -->
<div id="portfolio" class="portfolio-area area-padding fix">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="section-headline text-center">
                    <h2>Наші кімнати</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Start Portfolio -page -->

            <div class="awesome-project-content">

                @foreach (var item in Model)
                {
                    var str = $"/Content/eBusiness/img/portfolio/{item.RoomId}.jpg";
                    <!-- single-awesome-project start -->
                    <div class="col-md-4 col-sm-4 col-xs-12 design development">
                        <div class="single-awesome-project">
                            <div class="awesome-img">
                                <h2 class="text-center">@item.NameRoom</h2>
                                <a href="#"><img src="@str" alt="@item.NameRoom" /></a>
                                <div class="add-actions text-center">
                                    <div class="project-dec">
                                        <div id="Room" style="color:#3ec1d5;">
                                            @using (Html.BeginForm("Reserve", "Reserveds", FormMethod.Get))
                                            {
                                                @*<a href="https://localhost:44367/Reserveds/Reserve?RoomId=@item.RoomId">
                                                    </a>*@
                                                <h4>@item.NameRoom</h4>
                                                <div>@item.MinTime - @item.MaxTime</div>
                                                <div>Макс. людей @item.MaxPeople</div>

                                                <input name="RoomId" value="@item.RoomId" hidden />
                                                @*<input name="NameRoom" value="@item.NameRoom" hidden />
                                                    <input name="MinTime" value="@item.MinTime" hidden />
                                                    <input name="MaxTime" value="@item.MaxTime" hidden />
                                                    <input name="MaxPeople" value="@item.MaxPeople" hidden />*@
                                                
                                                    <input type="submit" value="Забронювати" class="btn btn-default btn-lg" />
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!-- single-awesome-project end -->
            </div>
        </div>

    </div>
</div>
<!-- awesome-portfolio end -->
